<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".googlemap">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/back1"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart Parking System"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#165715"
            />



        <Button
            android:id="@+id/SearchParking"
            android:drawableRight="@drawable/s1"
            android:background="#fff"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search Parking Area"
            android:paddingRight="20dp"
            android:textStyle="bold"
            android:textColor="#515151"
            />

        <Button
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:id="@+id/EntryCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/cam"
            android:paddingRight="20dp"
            android:textStyle="bold"
            android:textColor="#515151"
            android:text="Entry Camera" />




        <Button
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:id="@+id/ExitCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/cam"
            android:paddingRight="20dp"
            android:textStyle="bold"
            android:textColor="#515151"
            android:text="Exit Camera" />

        <Button
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:id="@+id/form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/sign4"
            android:paddingRight="20dp"
            android:textStyle="bold"
            android:textColor="#515151"
            android:text="Parking Register" />

        <Button
            android:id="@+id/seeInfo"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:textStyle="bold"
            android:textColor="#515151"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/info1"
            android:text="See Detail" />


        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#373737"
            android:textStyle="bold"
            android:text="Parking Space Left" />
        <EditText
            android:id="@+id/parkingSpaceLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#373737"
            android:inputType="textPersonName"
            android:text="" />

        <ListView
            android:layout_width="match_parent"
            android:id="@+id/listView"
            android:layout_height="match_parent" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>