<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserForm">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/wallpaper3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart Parking System"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#63b525"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="70dp"
            android:orientation="horizontal">



            <EditText
                android:id="@+id/parkinName"
                android:textColor="#fff"
                android:textStyle="bold"
                android:paddingLeft="28dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Parking Name"
                android:textColorHint="#a9a9a9"
                android:textSize="25dp"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/parkingRent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="#fff"
                android:textStyle="bold"
                android:paddingLeft="28dp"
                android:layout_weight="1"
                android:ems="10"
                android:textColorHint="#a9a9a9"
                android:textSize="25dp"
                android:inputType="textPersonName"
                android:hint="Parking Rent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/parkingCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:ems="10"
                android:textColor="#fff"
                android:textStyle="bold"
                android:paddingLeft="28dp"
                android:textColorHint="#a9a9a9"
                android:textSize="25dp"
                android:inputType="textPersonName"
                android:hint="Parking Capacity" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"

            >

            <Button
                android:id="@+id/submitForm"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:text="Submit"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/information"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:text="See Info"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/parkingInformationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textColorHint="#a9a9a9"
            android:textSize="25dp"
            android:textStyle="bold"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:layout_marginTop="20dp"
            android:hint="Parking Info" />

        <EditText
            android:id="@+id/databaseData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="20dp"
            android:textColor="#fff"
            android:inputType="textPersonName"
            android:text="" />

        <Button
            android:id="@+id/sendData"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="send data" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>